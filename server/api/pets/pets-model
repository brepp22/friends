const db = require('../../data/db-config')

async function find() {
    return db('pets')
    .select('*')
    .orderBy('pet_id', 'asc')
}

async function getCommentsByPetId(pet_id, limit = null) {
    let query = db('comments')
        .where('pet_id', pet_id)
        .orderBy('created_at', 'desc');
    
    if (limit) {
        query = query.limit(limit);
    }
    
    return query;
}


async function getById(pet_id){
    return db('pets').where('pet_id' , pet_id).first()
}

async function addComment({comment, pet_id, username}) {
    return db('comments').
    insert({comment, pet_id, username})
    .returning('*')
    .then(rows => rows[0])
}

async function updateLikeStatus(pet_id, username, like) {
    console.log('Updating like status:', { pet_id, username, like });

    const existingLike = await db('likes')
        .where({ pet_id, username})
        .first();

    if (existingLike) {
        console.log('Existing like found. Updating like status...');
        return db('likes')
            .where({ pet_id, username })
            .update({ like })
            .returning('*')
            .then(rows => {
                console.log('Updated like:', rows[0]);
                return rows[0];
            });
    } else {
        console.log('No existing like. Inserting new like record...');
        return db('likes')
            .insert({ pet_id, username, like })
            .returning('*')
            .then(rows => {
                console.log('Inserted like:', rows[0]);
                return rows[0];
            });
    }
}


module.exports = {
    find,
    getById,
    addComment,
    getCommentsByPetId,
    updateLikeStatus,
}